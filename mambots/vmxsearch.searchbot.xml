	</description>
	<files>
		<filename mambot="vmxsearch.searchbot">vmxsearch.searchbot.php</filename>
	</files>
	<params>
		<param name="density_flag" type="radio" default="1" label="Keyword density" description="Enables results based on keyword density (overrides Joomla sort).">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="name_flag" type="radio" default="1" label="Product Names" description="Enable search on product name.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="sku_flag" type="radio" default="1" label="Product SKUs" description="Enable search on product SKU.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="desc_flag" type="radio" default="1" label="Product Descriptions" description="Enable search on product description.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="sdesc_flag" type="radio" default="1" label="Product Short descriptions" description="Enable search on product short description.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="url_flag" type="radio" default="1" label="Product URLs" description="Enable search on product URL.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="review_flag" type="radio" default="1" label="Product reviews" description="Enable search on product reviews.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="manufacturer_flag" type="radio" default="1" label="Manufacturer names" description="Enable search on manufacturer names.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="category_flag" type="radio" default="1" label="Category names" description="Enable search on category names.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="parent_filter" type="list" default="both" label="Parent/Child filter" description="Restrict search to Parent, Child or both product types.">
			<option value="both">Both</option>
			<option value="parent">Parent only</option>
			<option value="child">Child only</option>
		</param>
		<param name="thumbnail_flag" type="radio" default="1" label="Show thumbnail" description="Displays a custom thumbnail of the product.">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="thumbnailx" type="text" default="40" label="Thumbnail width:" description="Custom thumbnail width (in pixels).">
		</param>
		<param name="thumbnaily" type="text" default="40" label="Thumbnail height:" description="Custom thumbnail height (in pixels).">
		</param>

	</params>
</mosinstall>
