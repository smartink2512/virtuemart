<?xml version="1.0" encoding="UTF-8" ?>
<extension version="2.5" type="plugin" group="vmpayment">
    <name>VMPSPLUGIN_SKRILL</name>
    <creationDate>April 2012</creationDate>
    <author>Skrill Holdings Limited</author>
    <authorUrl>http://www.skrill.com</authorUrl>
    <copyright>Copyright (C) 2012 Skrill.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>2.0.6</version>
    <description><![CDATA[<a href="http://www.skrill.com" target="_blank">skrill</a> is a popular
	payment provider authorised by the Financial Services Authority of the United Kingdom (FSA). ]]>
    </description>

    <files>
        <filename plugin="skrill">skrill.php</filename>
    </files>
    <languages>
        <language tag="en-GB">en-GB.plg_VMPSPLUGIN_skrill.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="payment" addfieldpath="/administrator/components/com_virtuemart/fields">
                <field type="vmjpluginwarning"/>
                <field type="spacer" default="VMPAYMENT_SKRILL_PAYMENT_TITLE" level="level1"/>
                <field type="list" name="product" label="VMPAYMENT_SKRILL_PRODUCT"
                       default="" description="VMPSPLUGIN_LOGOURL_TIP">
                    <option value="acc">VMPAYMENT_SKRILL_PRODUCT_ACC</option>
                    <option value="did">VMPAYMENT_SKRILL_PRODUCT_DID</option>
                    <option value="gir">VMPAYMENT_SKRILL_PRODUCT_GIR</option>
                    <option value="idl">VMPAYMENT_SKRILL_PRODUCT_IDL</option>
                    <option value="obt">VMPAYMENT_SKRILL_PRODUCT_OBT</option>
                    <option value="pwt">VMPAYMENT_SKRILL_PRODUCT_PWY</option>
                    <option value="sft">VMPAYMENT_SKRILL_PRODUCT_SFT</option>
                    <option value="wlt">VMPAYMENT_SKRILL_PRODUCT_WLT</option>
                </field>
                <field type="text" required="true" name="pay_to_email" size="50" label="VMPAYMENT_SKRILL_PAY_TO_EMAIL"
                       default="" description="VMPAYMENT_SKRILL_PAY_TO_EMAIL_TIP"/>
                <field type="text" required="true" name="secret_word" size="50" label="VMPAYMENT_SKRILL_SECRET_WORD"
                       default="" description="VMPAYMENT_SKRILL_SECRET_WORD_TIP"/>

                <field name="payment_currency" type="vmacceptedcurrency" default="" label="VMPSPLUGIN_CURRENCY"
                       description="VMPSPLUGIN_CURRENCY_TIP"/>
            </fieldset>

            <fieldset name="orderstatus" >
                <field name="status_pending" type="vmorderstate" scope="com_virtuemart" default="P"
                       label="VMPSPLUGIN_STATUS_PENDING" description="VMPSPLUGIN_STATUS_PENDING_TIP"/>
                <field name="status_success" type="vmorderstate" scope="com_virtuemart" default="C"
                       label="VMPSPLUGIN_STATUS_SUCCESS" description="VMPSPLUGIN_STATUS_SUCCESS_TIP"/>
                <field name="status_canceled" type="vmorderstate" scope="com_virtuemart" default="X"
                       label="VMPSPLUGIN_STATUS_FAILED" description="VMPSPLUGIN_STATUS_FAILED_TIP"/>
            </fieldset>

            <fieldset name="template">
                <field name="payment_logos" type="imagelist" label="VMPSPLUGIN_LOGOS" multiple="true"
                description="VMPSPLUGIN_LOGOS_TIP"
                       directory="/images/stories/virtuemart/payment"
                       default="" hide_default="1" hide_none="1"
                       stripext="0" exclude="^_"/>

                <field type="text" name="logo_url" size="50" label="VMPAYMENT_SKRILL_LOGOURL"
                       default="" description="VMPAYMENT_SKRILL_LOGOURL_TIP"/>
            </fieldset>
            <fieldset name="restrictions">
                <field name="countries" multiple="true" type="vmcountries" scope="com_virtuemart" default=""
                       label="VMPSPLUGIN_COUNTRIES" description="VMPSPLUGIN_COUNTRIES_TIP"/>
                <field name="min_amount" type="text" label="VMPSPLUGIN_MIN_AMOUNT"
                       description="VMPSPLUGIN_MIN_AMOUNT_TIP"/>
                <field name="max_amount" type="text" label="VMPSPLUGIN_MAX_AMOUNT"
                       description="VMPSPLUGIN_MAX_AMOUNT_TIP"/>
            </fieldset>

            <fieldset name="fee" >
                <field name="cost_per_transaction" type="text" label="VMPSPLUGIN_COST_PER_TRANSACTION"
                       description="VMPSPLUGIN_COST_PER_TRANSACTION_TIP"/>
                <field name="cost_percent_total" type="text" label="VMPSPLUGIN_COST_PERCENT_TOTAL"
                       description="VMPSPLUGIN_COST_PERCENT_TOTAL_TIP"/>
                <field name="tax_id" type="vmtaxes" scope="com_virtuemart" label="VMPSPLUGIN_TAX"
                       description="VMPSPLUGIN_TAX_TIP"/>
            </fieldset>

            <fieldset name="debug">
                <field name="debug" type="list" default="0" label="VMPSPLUGIN_DEBUG"
                       description="VMPSPLUGIN_DEBUG_TIP">
                    <option value="0">COM_VIRTUEMART_NO</option>
                    <option value="1">COM_VIRTUEMART_YES</option>
                </field>
                <field name="log" type="list" default="0" label="VMPSPLUGIN_LOG"
                       description="VMPSPLUGIN_LOG_TIP">
                    <option value="0">COM_VIRTUEMART_NO</option>
                    <option value="1">COM_VIRTUEMART_YES</option>
                </field>
            </fieldset>

        </fields>
    </config>
</extension>
