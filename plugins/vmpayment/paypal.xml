<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment" >
    <name>VMPAYMENT_PAYPAL</name>
    <creationDate>June 2011</creationDate>
    <author>The VirtueMart Development Team</author>
    <authorUrl>http://www.virtuemart.net</authorUrl>
    <copyright>Copyright (C) 2004-2011 Virtuemart Team. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>1.9.8</version>
    <description><![CDATA[<a href="http://paypal.com" target="_blank">PayPal</a> is a popular
	payment provider and available in many countries. ]]>
    </description>

    <files>
	<filename plugin="paypal">paypal.php</filename>
    </files>
    <languages>
	<language tag="en-GB">en-GB.plg_vmpayment_paypal.ini</language>
    </languages>
    <params addpath="/administrator/components/com_virtuemart/elements">
	<param type="vmjpluginwarning" />
	<param   type="spacer" default="VMPAYMENT_PAYPAL_PARAMS" level="level1" />
	<param type="text" name="paypal_merchant_email"  size="50" label="VMPAYMENT_PAYPAL_EMAIL"
             default="username@email.com" description="VMPAYMENT_PAYPAL_EMAIL_DESC" />

        <!-- BY DEFAULT paypal currency= vendor currency
        param name="currency" type="radio" default="1" label="VMPAYMENT_PAYPAL_CURRENCY" description="VMPAYMENT_PAYPAL_SANDBOX_DESC">
            <option value="AUD">Australian Dollar </option>
            <option value="CAD">Canadian Dollar </option>
            <option value="EUR">Euro</option>
            <option value="GBP">Pound sterling</option>
            <option value="JPY">Yen japonais</option>
            <option value="USD">US Dollar</option>
        </param -->

	<param name="PAYPAL_VERIFIED_ONLY" type="radio" default="0" label="VMPAYMENT_PAYPAL_ONLYVERIFIED" description="VMPAYMENT_PAYPAL_ONLYVERIFIED_EXPLAIN">
	    <option value="0">COM_VIRTUEMART_NO</option>
	    <option value="1">COM_VIRTUEMART_YES</option>
	</param>

	<param   type="spacer" default="VMPAYMENT_PAYPAL_SANDBOX_PARAMS" level="level1" />

	<param name="sandbox" type="radio" default="1" label="VMPAYMENT_PAYPAL_SANDBOX" description="VMPAYMENT_PAYPAL_SANDBOX_DESC" >
	    <option value="0">COM_VIRTUEMART_NO</option>
	    <option value="1">COM_VIRTUEMART_YES</option>
	</param>
	<param name="sandbox_merchant_email" type="text" size="50" default="" label="VMPAYMENT_PAYPAL_SANDBOX_MERCHANT" description="VMPAYMENT_PAYPAL_SANDBOX_MERCHANT_DESC" />
	<param   type="spacer" default="VMPAYMENT_PAYPAL_VIRTUEMART_PARAMS" level="level1" />
	<param	name="payment_logos" type="vmfiles" label="VMPAYMENT_PAYPAL_LOGOS"
             	description="VMPAYMENT_PAYPAL_LOGOS_DESC"
             	directory="/images/stories/virtuemart/payment"
             	default="default" hide_default="1" hide_none="1"
             	stripext="0"  exclude="^_" />
	<param name="payment_description" type="textarea" default="" label="VMPAYMENT_PAYPAL_DESCRIPTION" description="VMPAYMENT_PAYPAL_DESCRIPTION_DESC" rows="5" cols="30" />
	<param name="debug" type="radio" default="0" label="VMPAYMENT_PAYPAL_DEBUG" description="VMPAYMENT_PAYPAL_DEBUG_DESC" >
	    <option value="0">COM_VIRTUEMART_NO</option>
	    <option value="1">COM_VIRTUEMART_YES</option>
	</param>
	<param name="status_pending" type="vmorderstate" scope="com_virtuemart" default="P" label="VMPAYMENT_PAYPAL_STATUS_PENDING" description="VMPAYMENT_PAYPAL_STATUS_PENDING_EXPLAIN" />
	<param name="status_success" type="vmorderstate" scope="com_virtuemart" default="C" label="VMPAYMENT_PAYPAL_STATUS_SUCCESS" description="VMPAYMENT_PAYPAL_STATUS_SUCCESS_EXPLAIN" />
	<param name="status_canceled" type="vmorderstate" scope="com_virtuemart" default="X" label="VMPAYMENT_PAYPAL_STATUS_FAILED" description="VMPAYMENT_PAYPAL_STATUS_FAILED_EXPLAIN" />
	<param name="countries" type="vmcountries"  scope="com_virtuemart" default="" label="VMPAYMENT_PAYPAL_COUNTRIES_DESC" description="VMPAYMENT_PAYPAL_COUNTRIES_DESC"/>
	<param name="min_amount" type="text"  label="VMPAYMENT_PAYPAL_MIN_AMOUNT" description="VMPAYMENT_PAYPAL_MIN_AMOUNT_EXPLAIN" />
	<param name="max_amount" type="text"  label="VMPAYMENT_PAYPAL_MAX_AMOUNT" description="VMPAYMENT_PAYPAL_MAX_AMOUNT_EXPLAIN" />
	<param name="cost" type="text"  label="VMPAYMENT_PAYPAL_FEE" description="VMPAYMENT_PAYPAL_FEE_EXPLAIN" />
	<param name="tax_id" type="vmtaxes" scope="com_virtuemart"  label="VMPAYMENT_PAYPAL_TAX" description="VMPAYMENT_PAYPAL_TAX_EXPLAIN" />
    </params>

    <fieldset addpath="/administrator/components/com_virtuemart/elements">
	<field type="vmjpluginwarning" />
	<field type="spacer" default="VMPAYMENT_PAYPAL_FIELDS" level="level1" />
	<field type="text" name="paypal_merchant_email"  size="50" label="VMPAYMENT_PAYPAL_EMAIL"
             default="username@email.com" description="VMPAYMENT_PAYPAL_EMAIL_DESC" />

        <!-- BY DEFAULT paypal currency= vendor currency
        field name="currency" type="radio" default="1" label="VMPAYMENT_PAYPAL_CURRENCY" description="VMPAYMENT_PAYPAL_SANDBOX_DESC">
            <option value="AUD">Australian Dollar </option>
            <option value="CAD">Canadian Dollar </option>
            <option value="EUR">Euro</option>
            <option value="GBP">Pound sterling</option>
            <option value="JPY">Yen japonais</option>
            <option value="USD">US Dollar</option>
        </field -->

	<field name="PAYPAL_VERIFIED_ONLY" type="radio" default="0" label="VMPAYMENT_PAYPAL_ONLYVERIFIED" description="VMPAYMENT_PAYPAL_ONLYVERIFIED_EXPLAIN">
	    <option value="0">COM_VIRTUEMART_NO</option>
	    <option value="1">COM_VIRTUEMART_YES</option>
	</field>
	<field	name="payment_logos" type="vmfiles" label="VMPAYMENT_PAYPAL_LOGOS"
             	description="VMPAYMENT_PAYPAL_LOGOS_DESC"
             	directory="/images/stories/virtuemart/payment"
             	default="default" hide_default="1" hide_none="1"
             	stripext="0"  exclude="^_" />

	<field   type="spacer" default="VMPAYMENT_PAYPAL_SANDBOX_FIELDS" level="level1" />

	<field name="sandbox" type="radio" default="1" label="VMPAYMENT_PAYPAL_SANDBOX" description="VMPAYMENT_PAYPAL_SANDBOX_DESC" >
	    <option value="0">COM_VIRTUEMART_NO</option>
	    <option value="1">COM_VIRTUEMART_YES</option>
	</field>
	<field name="sandbox_merchant_email" type="text" size="50" default="" label="VMPAYMENT_PAYPAL_SANDBOX_MERCHANT" description="VMPAYMENT_PAYPAL_SANDBOX_MERCHANT_DESC" />

	<field   type="spacer" default="VMPAYMENT_PAYPAL_VIRTUEMART_fieldS" level="level1" />
	<field	name="payment_logos" type="vmfiles" label="VMPAYMENT_PAYPAL_LOGOS"
             	description="VMPAYMENT_PAYPAL_LOGOS_DESC"
             	directory="/images/stories/virtuemart/payment"
             	default="default" hide_default="1" hide_none="1"
             	stripext="0"  exclude="^_" />
	<field name="payment_description" type="textarea" default="" label="VMPAYMENT_PAYPAL_VIRTUEMART_DESCRIPTION" description="VMPAYMENT_PAYPAL_VIRTUEMART_DESCRIPTION_DESC" rows="5" cols="30" />
	<field name="debug" type="radio" default="0" label="VMPAYMENT_PAYPAL_DEBUG" description="VMPAYMENT_PAYPAL_DEBUG_DESC" >
	    <option value="0">COM_VIRTUEMART_NO</option>
	    <option value="1">COM_VIRTUEMART_YES</option>
	</field>
	<field name="status_pending" type="vmorderstate" scope="com_virtuemart" default="P" label="VMPAYMENT_PAYPAL_STATUS_PENDING" description="VMPAYMENT_PAYPAL_STATUS_PENDING_DESC" />
	<field name="status_success" type="vmorderstate" scope="com_virtuemart" default="C" label="VMPAYMENT_PAYPAL_STATUS_SUCCESS" description="VMPAYMENT_PAYPAL_STATUS_SUCCESS_DESC" />
	<field name="status_canceled" type="vmorderstate" scope="com_virtuemart" default="X" label="VMPAYMENT_PAYPAL_STATUS_FAILED" description="VMPAYMENT_PAYPAL_STATUS_FAILED_DESC" />
	<field name="countries" type="vmcountries"  scope="com_virtuemart" default="" label="VMPAYMENT_PAYPAL_COUNTRIES_DESC" description="VMPAYMENT_PAYPAL_COUNTRIES_DESC"/>

	<field name="min_amount" type="text"  label="VMPAYMENT_PAYPAL_MIN_AMOUNT" description="VMPAYMENT_PAYPAL_MIN_AMOUNT_EXPLAIN" />
	<field name="max_amount" type="text"  label="VMPAYMENT_PAYPAL_MAX_AMOUNT" description="VMPAYMENT_PAYPAL_MAX_AMOUNT_EXPLAIN" />
	<field name="cost" type="text"  label="VMPAYMENT_PAYPAL_FEE" description="VMPAYMENT_PAYPAL_FEE_EXPLAIN" />
	<field name="payment_tax_id" type="vmtaxes" scope="com_virtuemart"  label="VMPAYMENT_PAYPAL_TAX" description="VMPAYMENT_PAYPAL_TAX_EXPLAIN" />


    </fieldset>
</install>
