<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment" >	
	<name>VMPayment - PayPal</name>
	<author><![CDATA[JMart Project]]></author>
	<creationdate>2010</creationdate>
	<copyright><![CDATA[2005 JMart Project]]></copyright>
	<license>GNU/GPL</license>
	<authoremail></authoremail>
	<authorurl>http://paypal.com</authorurl>
	<version>1.0</version>
	<description><![CDATA[<a href="http://paypal.com" target="_blank">PayPal</a> is a popular 
	payment provider and available in many countries. ]]></description>

	<!-- Payment Method Type Codes:
	N: no processing (=manual processing like "purchase order" or "Cash on Delivery")
	P: PayPal-like (Shows HTML Code to the customer - you may use a <form> to redirect the customer to the Payment Gateway (used for PayPal, Worldpay, 2Checkout etc))
	C: Credit Card (only collect the CC data, manual processing)
	Y: Automatic Credit Card Processor (authorize.net, eWay)
	-->

	<element>paypal</element>
	<files>
		<filename plugin="paypal">paypal.php</filename>
	</files>
	<params>
		<param type="text" name="pType" label="VM_PAYMS_TYPE" default = "PP" description="VM_PAYMS_TYPE" />
		<param type="text" name="PAYPAL_EMAIL" label="PLG_VMPAYMENT_PAYPAL_EMAIL"
             default="username@email.com" description="PLG_VMPAYMENT_PAYPAL_EMAIL_EXPLAIN" /><br/>
			 
		<param name="status_success" type="sql" default="C" label="PLG_VMPAYMENT_PAYPAL_STATUS_SUCCESS" description="PLG_VMPAYMENT_PAYPAL_STATUS_SUCCESS_EXPLAIN" 
			query="SELECT order_status_code AS value, order_status_name AS status_success FROM #__virtuemart_orderstates" /><br/>
			
		<param name="status_pending" type="sql" default="P" label="PLG_VMPAYMENT_PAYPAL_STATUS_PENDING" description="PLG_VMPAYMENT_PAYPAL_STATUS_PENDING_EXPLAIN" 
			query="SELECT order_status_code AS value, order_status_name AS status_pending FROM #__virtuemart_orderstates" /><br/>

		<param name="status_pending" type="sql" default="X" label="PLG_VMPAYMENT_PAYPAL_STATUS_FAILED" description="PLG_VMPAYMENT_PAYPAL_STATUS_FAILED_EXPLAIN" 
			query="SELECT order_status_code AS value, order_status_name AS status_pending FROM #__virtuemart_orderstates" />

		<param name="PAYPAL_VERIFIED_ONLY" type="radio" default="0" label="PLG_VMPAYMENT_PAYPAL_ONLYVERIFIED" description="PLG_VMPAYMENT_PAYPAL_ONLYVERIFIED_EXPLAIN">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="DEBUG" type="radio" default="0" label="PLG_VMPAYMENT_PAYPAL_DEBUG" description="PLG_VMPAYMENT_PAYPAL_DEBUG_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="SANDBOX" type="radio" default="1" label="PLG_VMPAYMENT_PAYPAL_SANDBOX" description="PLG_VMPAYMENT_PAYPAL_SANDBOX_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="SANDBOX" type="radio" default="1" label="PLG_VMPAYMENT_PAYPAL_SANDBOX" description="PLG_VMPAYMENT_PAYPAL_SANDBOX_DESC">
			<option value="AUD">Australian Dollar </option>
			<option value="CAD">Canadian Dollar </option>
			<option value="EUR">Euro</option>
			<option value="GBP">Pound sterling</option>
			<option value="JPY">Yen japonais</option>
			<option value="USD">US Dollar</option>
		</param>
	</params>
</install>
