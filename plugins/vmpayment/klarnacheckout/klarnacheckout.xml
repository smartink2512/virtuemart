<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment">
    <name>VMPAYMENT_KLARNA</name>
    <creationDate>${PHING.VM.RELDATE}</creationDate>
    <author>The VirtueMart Development Team</author>
    <authorUrl>http://www.virtuemart.net</authorUrl>
    <copyright>${PHING.VM.COPYRIGHT}</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>${PHING.VM.RELEASE}</version>


    <files>
        <filename plugin="klarnacheckout">klarnacheckout.php</filename>
    </files>

    <params addpath="/administrator/components/com_virtuemart/elements">

        <param	name="payment_logos" type="vmfiles" label="VMPAYMENT_HEIDELPAY_LOGOS"
                  description="VMPAYMENT_HEIDELPAY_LOGOS_DESC"
                  directory="/images/stories/virtuemart/payment"
                  default="default" hide_default="1" hide_none="1"
                  stripext="0"  exclude="^_" />
        <param type="spacer" default=""/>
    <param name="klarna_merchantid_swe" type="text" default="" label="VMPAYMENT_KLARNA_CONF_MERCHANT_ID" description="VMPAYMENT_KLARNA_CONF_MERCHANT_ID_DESC"/>
    <param name="klarna_sharedsecret_swe" type="text" default="" label="VMPAYMENT_KLARNA_CONF_SHARED_SECRET" description="VMPAYMENT_KLARNA_CONF_SHARED_SECRET_DESC"/>

        <param name="status_checkout_complete" type="vmorderstate" default="C" label="VMPAYMENT_KLARNACHECKOUT_checkout_complete" description="VMPAYMENT_KLARNACHECKOUT_checkout_complete_DESC"/>
    <param name="status_activateReservation" type="vmorderstate" default="S" label="VMPAYMENT_KLARNACHECKOUT_ACTIVATE_RESERVATION" description="VMPAYMENT_KLARNACHECKOUT_ACTIVATE_RESERVATION_DESC"/>
    <param name="status_cancelReservation" type="vmorderstate" default="X" label="VMPAYMENT_KLARNACHECKOUT_CANCEL_RESERVATION" description="VMPAYMENT_KLARNACHECKOUT_CANCEL_RESERVATION_DESC"/>
    <param name="status_changeReservation" type="vmorderstate" default="X" label="VMPAYMENT_KLARNACHECKOUT_CHANGE_RESERVATION" description="VMPAYMENT_KLARNACHECKOUT_CHANGE_RESERVATION_DESC"/>
        <param name="min_amount" type="text"  label="VMPAYMENT_KLARNACHECKOUT_MIN_AMOUNT" description="VMPAYMENT_KLARNACHECKOUT_MIN_AMOUNT_DESC" />
        <param name="max_amount" type="text"  label="VMPAYMENT_KLARNACHECKOUT_MAX_AMOUNT" description="VMPAYMENT_KLARNACHECKOUT_MAX_AMOUNT_DESC" />


    </params>

</install>
