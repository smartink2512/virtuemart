<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment" >
	<name>VMPayment - Authorize</name>
	<author><![CDATA[Oscar van Eijk]]></author>
	<creationdate>2011</creationdate>
	<copyright><![CDATA[VirtueMart Team]]></copyright>
	<license>GNU/GPL</license>
	<authoremail></authoremail>
	<authorurl>http://virtuemart.net</authorurl>
	<version>1.1</version>
	<description><![CDATA[<a href="http://authorize.net">authorize.net</a> Payment Module]]></description>
	<!-- Payment Method Type Codes:
	N: no processing (=manual processing like "purchase order" or "Cash on Delivery")
	P: PayPal-like (Shows HTML Code to the customer - you may use a <form> to redirect the customer to the Payment Gateway (used for PayPal, Worldpay, 2Checkout etc))
	C: Credit Card (only collect the CC data, manual processing)
	Y: Automatic Credit Card Processor (authorize.net, eWay)
	-->

	<element>authorize</element>	
	<files>
		<filename plugin="authorize">authorize.php</filename>
	</files>
	  <params addpath="/administrator/components/com_virtuemart/elements">
		<param type="text" name="pType" label="Payment Type = " default = "Y" description="Paymentmethod type" />
		<param name="DEBUG" type="radio" default="0" label="VMPAYMENT_ADMIN_CFG_ENABLE_AUTORIZENET_TESTMODE" description="VMPAYMENT_ADMIN_CFG_ENABLE_AUTORIZENET_TESTMODE_EXPLAIN">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="CHECK_CARD_CODE" label="VMPAYMENT_PAYMENT_CVV2" type="radio" default="1" description="VMPAYMENT_PAYMENT_CVV2_TOOLTIP">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="AN_RECURRING" label="VMPAYMENT_PAYMENT_AN_RECURRING" type="radio" default="0" description="VMPAYMENT_PAYMENT_AN_RECURRING_TOOLTIP">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="AN_TYPE" label="VMPAYMENT_ADMIN_CFG_AUTORIZENET_AUTENTICATIONTYPE" type="radio" default="AUTH_CAPTURE" description="VMPAYMENT_ADMIN_CFG_AUTORIZENET_AUTENTICATIONTYPE_EXPLAIN">
			<option value="AUTH_CAPTURE">AUTH_CAPTURE</option>
			<option value="AUTH_ONLY">AUTH_ONLY</option>
		</param>
		<param name="AN_SHOW_ERROR_CODE" label="VMPAYMENT_ADMIN_CFG_AUTORIZENET_RESPCODES" type="radio" default="0" description="VMPAYMENT_ADMIN_CFG_AUTORIZENET_RESPCODES_EXPLAIN">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="AN_EMAIL_MERCHANT" label="VMPAYMENT_ADMIN_CFG_AUTORIZENET_EMAIL_MERCHANT" type="radio" default="1" description="VMPAYMENT_ADMIN_CFG_AUTORIZENET_EMAIL_MERCHANT_EXPLAIN">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="AN_EMAIL_CUSTOMER" label="VMPAYMENT_ADMIN_CFG_AUTORIZENET_EMAIL_CUSTOMER" type="radio" default="1" description="VMPAYMENT_ADMIN_CFG_AUTORIZENET_EMAIL_CUSTOMER_EXPLAIN">
			<option value="1">Yes</option>
			<option value="0">No</option>
		</param>
		<param name="@spacer" type="spacer" />
<param name="VMPAYMENT_VERIFIED_STATUS" type="vmorderstate" scope="com_virtuemart" default="C" label="VMPAYMENT_ADMIN_CFG_PAYMENT_ORDERSTATUS_SUCC" description="VMPAYMENT_ADMIN_CFG_PAYMENT_ORDERSTATUS_SUCC_EXPLAIN" />

        <param name="VMPAYMENT_INVALID_STATUS" type="vmorderstate" scope="com_virtuemart" default="X" label="VMPAYMENT_ADMIN_CFG_PAYMENT_ORDERSTATUS_FAIL" description="VMPAYMENT_ADMIN_CFG_PAYMENT_ORDERSTATUS_FAIL_EXPLAIN" />

		<param name="VMPAYMENT_VERIFIED_STATUS" label="VMPAYMENT_ADMIN_CFG_PAYMENT_ORDERSTATUS_SUCC" description="VMPAYMENT_ADMIN_CFG_PAYMENT_ORDERSTATUS_SUCC_EXPLAIN"
			type="table_data_list" table="#__virtuemart_orderstates" valuefield="order_status_code" textfield="order_status_name" orderfield="list_order" />
		<param name="VMPAYMENT_INVALID_STATUS" label="VMPAYMENT_ADMIN_CFG_PAYMENT_ORDERSTATUS_FAIL" description="VMPAYMENT_ADMIN_CFG_PAYMENT_ORDERSTATUS_FAIL_EXPLAIN"
			type="table_data_list" table="#__virtuemart_orderstates" valuefield="order_status_code" textfield="order_status_name" orderfield="list_order" />
		<param name="AN_LOGIN" type="text" label="VMPAYMENT_ADMIN_CFG_AUTORIZENET_USERNAME" default="username" description="VMPAYMENT_ADMIN_CFG_AUTORIZENET_USERNAME_EXPLAIN" />
		<param name="transaction_key" type="secret_key" label="VMPAYMENT_ADMIN_CFG_AUTORIZENET_KEY" description="VMPAYMENT_ADMIN_CFG_AUTORIZENET_KEY_EXPLAIN" />
	</params>
</install>
