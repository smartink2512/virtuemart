<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmpayment" >	
	<name>VMPayment - Nochex</name>
	<author><![CDATA[JMart Project]]></author>
	<creationdate>2010</creationdate>
	<copyright><![CDATA[2005 JMart Project]]></copyright>
	<license>GNU/GPL</license>
	<authoremail></authoremail>
	<authorurl>http://nochex.com</authorurl>
	<version>1.0</version>
	<description><![CDATA[<a href="http://nochex.com" target="_blank">Nochex</a> is a leading, independent UK based online payment company, 
	specialising in providing smaller online businesses with simple, 
	accessible, easy to use, online payment services.]]></description>

	<!-- Payment Method Type Codes:
	N: no processing (=manual processing like "purchase order" or "Cash on Delivery")
	P: PayPal-like (Shows HTML Code to the customer - you may use a <form> to redirect the customer to the Payment Gateway (used for PayPal, Worldpay, 2Checkout etc))
	C: Credit Card (only collect the CC data, manual processing)
	Y: Automatic Credit Card Processor (authorize.net, eWay)
	-->
	<type>P</type>
	<is_creditcard>0</is_creditcard>
	<element>nochex</element>
	<files>
		<filename plugin="nochex">nochex.php</filename>
	</files>
	<params>
		<param type="text" name="NOCHEX_EMAIL" label="PHPSHOP_ADMIN_CFG_NOCHEX_EMAIL"
             default="username@email.com" description="PHPSHOP_ADMIN_CFG_NOCHEX_EMAIL_EXPLAIN" />
	</params>
</install>
