<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmshipper" >
     <name>VMSHIPPER_WEIGHT_COUNTRIES_PLUGIN</name>
    <creationDate>June 2011</creationDate>
    <author>The VirtueMart Development Team</author>
    <authorUrl>http://www.virtuemart.net</authorUrl>
    <copyright>Copyright (C) 2004-2011 Virtuemart Team. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
    <version>1.9.8</version>
    <description>VMSHIPPER_WEIGHT_COUNTRIES_PLUGIN_DESC</description>
    <languages>
        <language tag="en-GB">en-GB.plg_vmshipper_weight_countries.ini</language>
        <language tag="fr-FR">fr-FR.plg_vmshipper_weight_countries.ini</language>
    </languages>
    <files>
        <filename plugin="weight_countries">weight_countries.php</filename>
    </files>
    <params addpath="/administrator/components/com_virtuemart/elements">
        <param type="vmjpluginwarning" />
        <param type="spacer" default="VMSHIPPER_WEIGHT_COUNTRIES" level="level1" />
         <param	name="shipper_logo" type="vmfiles" label="VMSHIPPER_WEIGHT_COUNTRIES_LOGOS"
             	description="VMSHIPPER_WEIGHT_COUNTRIES_LOGOS_DESC"
             	directory="/images/stories/virtuemart/shipper"
             	default="default" hide_default="1" hide_none="1"
             	stripext="0"   exclude="^_" />
        <param name="countries" type="vmcountries"  scope="com_virtuemart" default="" label="VMSHIPPER_WEIGHT_COUNTRIES_COUNTRIES" description="VMSHIPPER_WEIGHT_COUNTRIES_COUNTRIES_DESC"/>
        <param name="zip_start" type="text" size="10" default="" label="VMSHIPPER_WEIGHT_COUNTRIES_ZIP_START" description="VMSHIPPER_WEIGHT_COUNTRIES_ZIP_START_DESC"/>
        <param name="zip_stop" type="text" size="10" default="" label="VMSHIPPER_WEIGHT_COUNTRIES_ZIP_STOP" description="VMSHIPPER_WEIGHT_COUNTRIES_ZIP_STOP_DESC"/>
        <param name="weight_start" type="text" size="10" default="" label="VMSHIPPER_WEIGHT_COUNTRIES_WEIGHT_START" description="VMSHIPPER_WEIGHT_COUNTRIES_WEIGHT_START_DESC"/>
        <param name="weight_stop" type="text" size="10" default="" label="VMSHIPPER_WEIGHT_COUNTRIES_WEIGHT_STOP" description="VMSHIPPER_WEIGHT_COUNTRIES_WEIGHT_STOP_DESC"/>
        <param name="rate_value" type="text"   label="VMSHIPPER_WEIGHT_COUNTRIES_RATE_VALUE" description="VMSHIPPER_WEIGHT_COUNTRIES_RATE_VALUE_DESC" />
        <param name="package_fee" type="text"   label="VMSHIPPER_WEIGHT_COUNTRIES_PACKAGE_FEE" description="VMSHIPPER_WEIGHT_COUNTRIES_PACKAGE_FEE_DESC" />
        <param name="tax_id" type="vmtaxes" scope="com_virtuemart"  label="VMSHIPPER_WEIGHT_COUNTRIES_TAX" description="VMSHIPPER_WEIGHT_COUNTRIES_TAX_DESC" />
    </params>
</install>
