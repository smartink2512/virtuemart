<?xml version="1.0" encoding="UTF-8" ?>
<install version="1.5" type="plugin" group="vmshipper" >
    <name>VMSHIPPER_PRODUCTS_COUNTRIES_PLUGIN</name>
    <author>Val√©rie Isaksen</author>
    <creationdate>2011</creationdate>
    <copyright>2011 alatak.net</copyright>
    <license>GNU/GPL</license>
    <authoremail></authoremail>
    <authorUrl>http://www.alatak.net</authorUrl>
    <version>1.0</version>
    <description>VMSHIPPER_PRODUCTS_COUNTRIES_PLUGIN_DESC</description>
    <element>standard</element>
    <files>
        <filename plugin="products_countries">products_countries.php</filename>
    </files>


    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_vmshipper_products_countries.ini</language>
        <language tag="fr-FR">fr-FR/fr-FR.plg_vmshipper_products_countries.ini</language>
    </languages>
    <params addpath="/administrator/components/com_virtuemart/elements">
        <param type="vmjpluginwarning" />
        <param name="shipping_name" type="text" size="50" default="" label="VMSHIPPER_PRODUCTS_COUNTRIES_NAME" description="VMSHIPPER_PRODUCTS_COUNTRIES_NAME_DESC"/>
        <param name="countries" type="vmcountries"  scope="com_virtuemart" default="" label="VMSHIPPER_PRODUCTS_COUNTRIES_COUNTRIES" description="VMSHIPPER_PRODUCTS_COUNTRIES_COUNTRIES_DESC"/>
        <param name="cost_first_product" type="text" size="10" default="" label="VMSHIPPER_PRODUCTS_COUNTRIES_COST_FIRST_PRODUCT" description="VMSHIPPER_PRODUCTS_COUNTRIES_COST_FIRST_PRODUCT_DESC"/>
        <param name="cost_next_products" type="text" size="10" default="" label="VMSHIPPER_PRODUCTS_COUNTRIES_COST_NEXT_PRODUCTS" description="VMSHIPPER_PRODUCTS_COUNTRIES_COST_NEXT_PRODUCTS_DESC"/>
        <param name="cost_limit" type="text" size="10" default="" label="VMSHIPPER_PRODUCTS_COUNTRIES_COST_LIMIT" description="VMSHIPPER_PRODUCTS_COUNTRIES_COST_LIMIT_DESC"/>
        <param name="currency" type="vmcurrencies" scope="com_virtuemart" default="978" label="VMSHIPPER_PRODUCTS_COUNTRIES_CURRENCY" description="VMSHIPPER_PRODUCTS_COUNTRIES_CURRENCY_DESC" />
        <param name="tax" type="vmtaxes" scope="com_virtuemart"  label="VMSHIPPER_PRODUCTS_COUNTRIES_TAX" description="VMSHIPPER_PRODUCTS_COUNTRIES_TAX_DESC" />
        <param name="product_weight" type="checkbox" scope="com_virtuemart"  label="VMSHIPPER_PRODUCTS_COUNTRIES_PRODUCT_WEIGHT" description="VMSHIPPER_PRODUCTS_COUNTRIES_PRODUCT_WEIGHT_DESC" />

    </params>

